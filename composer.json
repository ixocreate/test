{
    "name": "ixocreate/test",
    "description": "IXOCREATE Test Library",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "dg/bypass-finals": "^1.3",
        "phpunit/phpunit": "^9.0",
        "php-coveralls/php-coveralls": "^2.5"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Test\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
